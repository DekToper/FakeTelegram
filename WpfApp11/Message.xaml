<Page x:Class="WpfApp11.Message"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp11"
      mc:Ignorable="d"
      Title="Message" Height="25" Width="220">

    <Grid Background="White">
        <Label x:Name="fromUser" HorizontalAlignment="Left" Width="175"/>
        <Label x:Name="timeMessage" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="175,0,0,0" VerticalAlignment="Top" Height="25" RenderTransformOrigin="-0.25,0.333" Width="45" Foreground="#FFA8A8A8" FontSize="9"/>

    </Grid>
</Page>
