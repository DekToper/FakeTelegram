<Page x:Class="WpfApp11.Wave"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp11"
      mc:Ignorable="d"
      Title="Page1" Height="45" Width="275">

    <Grid Background="White">
        <Button Cursor="Hand" Content="►" x:Name="playButton" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Width="35" RenderTransformOrigin="0.5,0.5" Height="35" Background="#FF409BD8" FontSize="22">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.015"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label x:Name="musicName" HorizontalAlignment="Left" Margin="40,10,0,0" VerticalAlignment="Top" Height="25" Width="230"/>
        <Label x:Name="time" HorizontalAlignment="Left" Margin="180,10,0,0" VerticalAlignment="Top" Height="26" FontSize="10" Width="85" Foreground="#FF787676" Content=""/>

    </Grid>
</Page>
