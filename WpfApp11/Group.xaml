<Page x:Class="WpfApp11.Group"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp11"
      mc:Ignorable="d" 
      Height="75" Width="220">

    <Grid Height="75" Width="220" Background="White">
        <Image Name="GroupImage"  HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="55" Margin="10,10,0,0"/>
        <Label Name="GroupName" Content="Name" HorizontalAlignment="Left" Margin="70,9,0,0" VerticalAlignment="Top" FontSize="14" Width="125"/>
        <Label Name="Text" Content="User:Text" HorizontalAlignment="Left" Margin="70,38,0,0" VerticalAlignment="Top" Height="27" Width="155" Foreground="#FF8B8080"/>
        <Label Name="Date"  Content="Label" HorizontalAlignment="Left" Margin="180,19,0,0" VerticalAlignment="Top" Height="19" Width="30" FontSize="8" Foreground="#FF8B8080"/>
    </Grid>
</Page>
